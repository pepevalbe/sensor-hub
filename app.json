{
  "name": "sensor-hub",
  "scripts": {
    "postdeploy": "./scripts/create_APP_BASE_URL.sh"
  },
  "env": {
    "APP_BASE_URL": {
      "required": true
    },
    "EMAIL_PASSWORD": {
      "required": true
    },
    "EMAIL_USERNAME": {
      "required": true
    },
    "WEATHER_URL": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": false
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/java"
    }
  ]
}
